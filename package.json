{
    "name": "spotify-apple-music-links-bot",
    "version": "1.0.0",
    "description": "Telegram bot for converting music links between Apple Music and Spotify",
    "main": "src/app.js",
    "scripts": {
        "start": "env-cmd -f prod.env node src/app.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "author": "Northern Captain",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.0",
        "env-cmd": "^10.1.0",
        "jsonwebtoken": "^9.0.2",
        "sequelize": "^6.35.1",
        "sqlite3": "^5.1.6",
        "string-similarity": "^4.0.4",
        "telegraf": "^4.16.3",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "prettier": "^3.0.3",
        "supertest": "^6.3.3"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/app.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ]
    }
}
